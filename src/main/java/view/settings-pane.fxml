<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="settingsPane" prefHeight="800.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/16"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.SettingsController">

    <Label layoutX="14.0" layoutY="53.0" minWidth="-Infinity" prefHeight="25.0" prefWidth="90.0" text="Iterations"/>

    <Slider fx:id="iterationsSlider" blockIncrement="100.0" layoutX="34.0" layoutY="83.0" majorTickUnit="200.0"
            max="5000.0" min="0" prefHeight="14.0" prefWidth="190.0" showTickMarks="true"
            snapToTicks="true"/>

    <Button fx:id="resetButton" layoutX="129.0" layoutY="739.0" mnemonicParsing="false" onMouseClicked="#resetCanvas"
            text="Reset Defaults"/>
    <Separator layoutX="75.0" layoutY="200.0" prefWidth="200.0"/>
    <Separator layoutX="75.0" layoutY="584.0" prefWidth="200.0"/>

    <Label fx:id="coordinatesLabel" layoutX="14.0" layoutY="231.0" text="Coordinates at centre:"/>
    <Label layoutX="34.0" layoutY="259.0" text="Real: "/>
    <Label layoutX="34.0" layoutY="292.0" text="Imaginary:"/>
    <Label layoutX="14.0" layoutY="366.0" text="Zoom Level:"/>

    <Label fx:id="realVal" layoutX="115.0" layoutY="259.0" prefHeight="17.0" prefWidth="185.0" text="0.0"/>
    <Label fx:id="imaginaryVal" layoutX="115.0" layoutY="292.0" prefHeight="17.0" prefWidth="185.0" text="0.0"/>
    <Label fx:id="zoomLevel" layoutX="115.0" layoutY="366.0" prefHeight="17.0" prefWidth="128.0"/>

    <Button fx:id="snapshot" layoutX="136.0" layoutY="660.0" mnemonicParsing="false" onMousePressed="#takeSnapshot"
            text="Save Image"/>
    <Separator layoutX="74.0" layoutY="466.0" prefWidth="200.0"/>
    <Label fx:id="renderTime" layoutX="87.0" layoutY="525.0" prefHeight="17.0" prefWidth="185.0" text="render_time"/>
    <TextField fx:id="iterationValue" layoutX="243.0" layoutY="83.0" prefHeight="25.0"
               prefWidth="90.0"/>

</Pane>
